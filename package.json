{
  "name": "blog",
  "version": "0.0.4",
  "description": "Yet another blog",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/index.js",
    "build": "esbuild src/index.ts --platform=node --external:vscode-oniguruma --external:shiki --bundle --outfile=dist/index.js",
    "build:css": "esbuild --bundle src/styles/main.css --outfile=dist/public/main.css",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@gitstash.me:blog.git"
  },
  "keywords": [
    "blog"
  ],
  "author": "Igor <dont@bzzr.me> (https://ignorethis.page/)",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@tinyhttp/app": "2.0.20",
    "@tinyhttp/logger": "1.3.0",
    "@types/markdown-it": "12.2.3",
    "@types/node": "17.0.31",
    "blog-css": "0.1.0",
    "esbuild": "0.14.38",
    "husky": "7.0.4",
    "lint-staged": "12.4.1",
    "markdown-it": "13.0.0",
    "prettier": "2.6.2",
    "sirv": "2.0.2",
    "typescript": "4.6.3"
  },
  "dependencies": {
    "shiki": "0.10.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
