{
  "name": "blog",
  "version": "0.1.1",
  "description": "Yet another blog",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "start": "node dist/index.js",
    "build:ts": "esbuild src/index.ts --platform=node --external:vscode-oniguruma --external:shiki --bundle --outfile=dist/index.js --loader:.gif=file --loader:.png=file --asset-names=public/[name]-[hash]",
    "build:css": "esbuild --bundle src/styles/main.css --outfile=dist/public/main.css",
    "build": "cross-env NODE_ENV=production npm run build:ts -- --minify && cross-env NODE_ENV=production npm run build:css -- --minify",
    "watch:ts": "npm run build:ts -- --watch",
    "watch:css": "npm run build:css -- --watch",
    "watch:node": "nodemon --watch dist dist/index.js",
    "watch": "concurrently -n \"TS,CSS,NODE\" -c \"blue,magenta,green\" \"npm:watch:ts\" \"npm:watch:css\" \"npm:watch:node\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@gitstash.me:blog.git"
  },
  "keywords": [
    "blog"
  ],
  "author": "Igor <dont@bzzr.me> (https://ignorethis.page/)",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@tinyhttp/app": "2.0.22",
    "@tinyhttp/logger": "1.3.0",
    "@types/jest": "28.1.6",
    "@types/markdown-it": "12.2.3",
    "@types/node": "16.11.46",
    "blog-css": "0.2.12",
    "concurrently": "7.3.0",
    "cross-env": "7.0.3",
    "esbuild": "0.14.51",
    "husky": "8.0.1",
    "jest": "28.1.3",
    "lint-staged": "13.0.3",
    "markdown-it": "13.0.1",
    "nodemon": "2.0.19",
    "prettier": "2.7.1",
    "sirv": "2.0.2",
    "ts-jest": "28.0.7",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "shiki": "0.10.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
